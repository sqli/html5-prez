include ../includes/_mixins

doctype html
html(lang="en")

  head
    meta(charset="utf-8")

    //- Make it appy!
    meta(name="apple-mobile-web-app-capable" content="yes")
    meta(
      name="apple-mobile-web-app-status-bar-style"
      content="black-translucent"
    )

    //- Viewport settings
    meta(
      name="viewport"
      content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no"
    )

    //- Meta information for the project
    block title
      title Your Presentation Title
      meta(name="description" content="SEO-friendly meta description")
      meta(name="author" content="Your Name")

    //- Reveal styles
    link(rel="stylesheet" href="../css/reveal.css")

    //- Syntax highlighting
    link(rel="stylesheet" href="../lib/css/zenburn.css")

    //- Add extra styles using this block
    block styles

    //- Allows changing the presentation theme without modifying this template
    block theme
      //- SQLI Styles
      link(rel="stylesheet" href="../css/theme/sqli.css" id="theme")

    //- Check if we're serving the PDF version for printing
    script.
      var link = document.createElement( 'link' );
      link.rel = 'stylesheet';
      link.type = 'text/css';
      link.href = window.location.search.match( /print-pdf/gi ) ? '../css/print/pdf.css' : '../css/print/paper.css';
      document.getElementsByTagName( 'head' )[0].appendChild( link );

    <!--[if lt IE 9]>
    script(src="../lib/js/html5shiv.js")
    <![endif]-->

  body

    .reveal

      //- Any element inside this container is displayed as a slide
      .slides

        //- Use this block to add your own slides
        block slides

    ul.language
      li(class= $localeName === 'FR' ? 'active' : '')
        a(href="../FR") #{$i18n.global.language.fr}
      li(class= $localeName === 'EN' ? 'active' : '')
        a(href="../EN") #{$i18n.global.language.en}
    ul.social
      li
        a(href='http://www.facebook.com/SQLI.Enterprise', target='_blank')
          img(src='../img/social/Facebook_mini.png', style='border: 0px  ;', alt='Facebook', title='Facebook')
      li
        a(href='https://www.linkedin.com/company/sqli', target='_blank')
          img(src='../img/social/Linkedin_mini.png', style='border: 0px  ;', alt='Linkedin', title='Linkedin')
      li
        a(href='http://www.twitter.com/sqli_enterprise', target='_blank')
          img(src='../img/social/Twitter_mini.png', style='border: 0px  ;', alt='Twitter', title='Twitter')
      li
        a(href='http://www.youtube.com/user/SQLIGROUP', target='_blank')
          img(src='../img/social/Youtube_mini.png', style='border: 0px  ;', alt='Youtube', title='Youtube')

    //-
      This block exists so you can add things like footers, hashtag reminders,
      and anything else that helps the look of your slideshow that should be
      visible on *every* slide.
    block extras

    block defaultscripts
      script(src="../lib/js/head.min.js")
      script(src="../js/reveal.js")
      script.
        // Full list of configuration options available at:
        // https://github.com/hakimel/reveal.js#configuration
        Reveal.initialize({
          controls: true,
          progress: true,
          history: true,
          center: true,
          transition: 'slide', // none/fade/slide/convex/concave/zoom
          // Optional reveal.js plugins
          dependencies: [
            { src: '../lib/js/classList.js', condition: function() { return !document.body.classList; } },
            { src: '../plugin/markdown/marked.js', condition: function() { return !!document.querySelector( '[data-markdown]' ); } },
            { src: '../plugin/markdown/markdown.js', condition: function() { return !!document.querySelector( '[data-markdown]' ); } },
            { src: '../plugin/highlight/highlight.js', async: true, condition: function() { return !!document.querySelector( 'pre code' ); }, callback: function() { hljs.initHighlightingOnLoad(); } },
            { src: '../plugin/zoom-js/zoom.js', async: true },
            { src: '../plugin/notes/notes.js', async: true }
          ]
        });

    block scripts
